// Firestore security rules for your app
// Copy and paste these into the Firebase Console > Firestore Database > Rules
// Adjust as needed for production security!

service cloud.firestore {
  match /databases/{database}/documents {
    // DEVELOPMENT ONLY: Allow all authenticated users full access
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}

